{
  "name": "girkit-api-server",
  "description": "IRKit API server for Groovy",
  "keywords": [
    "groovy",
    "ratpack",
    "irkit"
  ],
  "repository": "https://github.com/yukung/girkit-api-server",
  "env": {
    "BUILDPACK_URL": "https://github.com/heroku/heroku-buildpack-gradle",
    "JAVA_OPTS": "-Xmx384m -Xss512k -XX:+UseCompressedOops",
    "IRKIT_DATA_FILE": {
      "description": "URL of your irkit.json. Private gist's raw URL is nice."
    },
    "SECRET_TOKEN": {
      "description": "A secret token used in the routing like: /SECRET_TOKEN/path.",
      "generator": "secret"
    }
  }
}
